<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dim_20dp"
    android:layout_marginBottom="@dimen/dim_10dp"
    android:layout_marginStart="@dimen/dim_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim_10dp">

        <ImageView
            android:layout_width="@dimen/dim_65dp"
            android:layout_height="@dimen/dim_65dp"
            android:background="@drawable/shimmer_circle"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_10dp"
            app:cardCornerRadius="@dimen/dim_20dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_5dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/shimmer_placeholder"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim_10dp">

        <ImageView
            android:layout_width="@dimen/dim_65dp"
            android:layout_height="@dimen/dim_65dp"
            android:background="@drawable/shimmer_circle"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_10dp"
            app:cardCornerRadius="@dimen/dim_20dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_5dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/shimmer_placeholder"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim_10dp">

        <ImageView
            android:layout_width="@dimen/dim_65dp"
            android:layout_height="@dimen/dim_65dp"
            android:background="@drawable/shimmer_circle"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_10dp"
            app:cardCornerRadius="@dimen/dim_20dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_5dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/shimmer_placeholder"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim_10dp">

        <ImageView
            android:layout_width="@dimen/dim_65dp"
            android:layout_height="@dimen/dim_65dp"
            android:background="@drawable/shimmer_circle"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_10dp"
            app:cardCornerRadius="@dimen/dim_20dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_5dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/shimmer_placeholder"/>

    </LinearLayout>



</LinearLayout>