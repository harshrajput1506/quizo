<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MoreFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/more_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More"
            android:fontFamily="@font/nunito_bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginTop="@dimen/dim_20dp"
            android:layout_marginStart="@dimen/dim_30dp"/>

        <ImageView
            android:id="@+id/wallet_info_btn"
            android:layout_width="@dimen/dim_25dp"
            android:layout_height="@dimen/dim_25dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/notification"
            app:layout_constraintStart_toEndOf="@id/more_title"
            app:layout_constraintTop_toTopOf="@id/more_title"
            app:layout_constraintBottom_toBottomOf="@id/more_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dim_30dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0.5"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_20dp"
            android:layout_marginEnd="@dimen/dim_20dp"
            android:layout_marginBottom="@dimen/dim_20dp"
            android:layout_marginTop="@dimen/dim_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/more_title"
            app:layout_constraintBottom_toTopOf="@id/more_version_txt"
            app:layout_constraintVertical_bias="0"
            app:cardCornerRadius="@dimen/dim_20dp"
            app:cardBackgroundColor="@color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/more_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dim_10dp"
                android:layout_marginBottom="@dimen/dim_10dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/more_version_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version - 1.0 Beta"
            android:textColor="@color/grey"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.98"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>