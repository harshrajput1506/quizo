<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_blue"
    tools:context=".Activities.QuizResultActivity">

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfetti_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/opponent_card"/>

    <TextView
        android:id="@+id/result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#Respect"
        android:textColor="@color/space_purple"
        android:textSize="@dimen/fs_24sp"
        android:fontFamily="@font/nunito_extrabold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="@dimen/dim_30dp"/>

    <TextView
        android:id="@+id/result_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOU WON â‚¹5"
        android:textColor="@color/green_70"
        android:textSize="@dimen/fs_28sp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintTop_toBottomOf="@id/result_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="@dimen/dim_50dp"/>

    <View
        android:id="@+id/avatar_bg"
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/bg_result_avatar"
        app:layout_constraintTop_toBottomOf="@id/result_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="@dimen/dim_20dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player_avatar"
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="@dimen/dim_120dp"
        android:src="@drawable/avatar2"
        android:elevation="@dimen/dim_3dp"
        app:layout_constraintTop_toTopOf="@id/avatar_bg"
        app:layout_constraintStart_toStartOf="@id/avatar_bg"
        app:layout_constraintBottom_toBottomOf="@id/avatar_bg"
        app:layout_constraintEnd_toEndOf="@id/avatar_bg"/>

    <TextView
        android:id="@+id/player_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score - 50.6"
        android:textColor="@color/grey"
        android:textSize="@dimen/fs_20sp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintTop_toBottomOf="@id/avatar_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="@dimen/dim_20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/opponent_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_score"
        app:layout_constraintBottom_toTopOf="@id/play_again_btn"
        android:layout_marginStart="@dimen/dim_30dp"
        android:layout_marginEnd="@dimen/dim_30dp"
        android:layout_marginTop="@dimen/dim_15dp"
        android:layout_marginBottom="@dimen/dim_15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_30dp"
        app:cardElevation="@dimen/dim_5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dim_30dp"
            android:paddingEnd="@dimen/dim_30dp"
            android:paddingTop="@dimen/dim_15dp"
            android:paddingBottom="@dimen/dim_15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/opponent_avatar"
                    android:layout_width="@dimen/dim_40dp"
                    android:layout_height="@dimen/dim_40dp"
                    android:src="@drawable/avatar1"
                    />
                <TextView
                    android:id="@+id/opponent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sakshi"
                    android:elevation="@dimen/dim_3dp"
                    android:maxLines="1"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="@dimen/fs_14sp"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/dim_80dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/opponent_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOST"
                android:textColor="@color/red_70"
                android:textSize="@dimen/fs_16sp"
                android:fontFamily="@font/nunito_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/opponent_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38.8"
                android:textColor="@color/grey"
                android:textSize="@dimen/fs_18sp"
                android:fontFamily="@font/nunito_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"/>







        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/play_again_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/player_score"
        app:cardBackgroundColor="@color/space_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/exit_btn"
        app:layout_constraintVertical_bias="1"
        app:cardCornerRadius="@dimen/dim_80dp"
        app:cardElevation="@dimen/dim_5dp"
        android:layout_marginStart="@dimen/dim_60dp"
        android:layout_marginEnd="@dimen/dim_60dp"
        android:layout_marginTop="@dimen/dim_10dp"
        android:layout_marginBottom="@dimen/dim_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="@dimen/fs_16sp"
            android:padding="@dimen/dim_15dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/exit_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/player_score"
        app:cardBackgroundColor="@color/black_60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        app:cardCornerRadius="@dimen/dim_80dp"
        app:cardElevation="@dimen/dim_5dp"
        android:layout_marginTop="@dimen/dim_10dp"
        android:layout_marginStart="@dimen/dim_60dp"
        android:layout_marginEnd="@dimen/dim_60dp"
        android:layout_marginBottom="@dimen/dim_40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="@dimen/fs_16sp"
            android:padding="@dimen/dim_15dp"/>

    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>