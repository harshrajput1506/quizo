<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_blue"
    tools:context=".Activities.HomeActivity">

   <FrameLayout
       android:id="@+id/frame_layout"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toTopOf="@id/bottom_bar"
       app:layout_constraintTop_toTopOf="parent"/>

   <nl.joery.animatedbottombar.AnimatedBottomBar
       android:id="@+id/bottom_bar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/bottom_bar_bg"
       app:abb_selectedTabType="text"
       app:abb_tabs="@menu/bottom_bar_menu"
       app:abb_selectedIndex="0"
       app:abb_tabColorSelected="@color/space_purple"
       app:abb_tabColor="@color/grey"
       app:abb_textAppearance="@style/BottomBarText"
       app:abb_iconSize="@dimen/dim_24dp"
       android:elevation="@dimen/dim_5dp"
       app:abb_indicatorColor="@color/space_purple"
       app:abb_indicatorAppearance="round"
       app:abb_indicatorLocation="bottom"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintVertical_bias="1"/>


</androidx.constraintlayout.widget.ConstraintLayout>