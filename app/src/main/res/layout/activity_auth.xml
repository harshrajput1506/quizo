<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_blue"
    tools:context=".Activities.AuthActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/auth_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_mobile_login"
            app:layout_constraintDimensionRatio="1.05:1"
            android:layout_marginTop="@dimen/dim_30dp"
            android:layout_marginStart="@dimen/dim_60dp"
            android:layout_marginEnd="@dimen/dim_60dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0"/>



        <TextView
            android:id="@+id/auth_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_auth_title"
            android:textSize="@dimen/fs_28sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dim_20dp"
            android:layout_marginStart="@dimen/dim_30dp"
            app:layout_constraintTop_toBottomOf="@+id/auth_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/numberContainer"
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dim_20dp"
            app:cardElevation="@dimen/dim_3dp"
            android:layout_marginTop="@dimen/dim_30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/auth_title"
            app:layout_constraintVertical_bias="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_18dp"
                android:paddingBottom="@dimen/dim_18dp">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Mobile No."
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="@dimen/fs_14sp"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintHorizontal_bias="0.06" />

                <TextView
                    android:id="@+id/countryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:text="+91"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fs_18sp"
                    app:layout_constraintTop_toTopOf="@+id/auth_edit_number"
                    app:layout_constraintStart_toStartOf="@+id/textView19"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/auth_edit_number"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintVertical_bias="0.5"/>

                <EditText
                    android:id="@+id/auth_edit_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim_5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:cursorVisible="true"
                    android:fontFamily="@font/nunito_bold"
                    android:hint="0000000000"
                    android:inputType="phone"
                    android:textCursorDrawable="@null"
                    android:maxLength="10"
                    android:padding="0dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/fs_18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/auth_continue_btn"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/countryCode"
                    app:layout_constraintTop_toBottomOf="@id/textView19"
                    app:layout_constraintVertical_bias="0" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/auth_continue_btn"
                    android:layout_width="@dimen/dim_120dp"
                    android:layout_height="0dp"
                    android:backgroundTint="@color/space_purple"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="@dimen/dim_20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nextBtn_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"
                            android:fontFamily="@font/nunito_semibold"
                            android:gravity="center"
                            android:text="Continue"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fs_14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_1dp"
            android:layout_marginStart="@dimen/dim_25dp"
            android:layout_marginEnd="@dimen/dim_10dp"
            android:background="@color/grey_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/auth_or_txt"
            app:layout_constraintTop_toTopOf="@id/auth_or_txt"
            app:layout_constraintBottom_toBottomOf="@id/auth_or_txt"/>

        <TextView
            android:id="@+id/auth_or_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="@dimen/fs_14sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/numberContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="@dimen/dim_30dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_1dp"
            android:layout_marginStart="@dimen/dim_10dp"
            android:layout_marginEnd="@dimen/dim_25dp"
            android:background="@color/grey_20"
            app:layout_constraintStart_toEndOf="@id/auth_or_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/auth_or_txt"
            app:layout_constraintBottom_toBottomOf="@id/auth_or_txt"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/auth_google"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_25dp"
            android:layout_marginStart="@dimen/dim_30dp"
            android:layout_marginEnd="@dimen/dim_30dp"
            android:layout_marginBottom="@dimen/dim_30dp"
            app:cardCornerRadius="@dimen/dim_20dp"
            android:elevation="@dimen/dim_3dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/auth_or_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_18dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dim_20dp"
                    android:layout_height="@dimen/dim_20dp"
                    android:src="@drawable/ic_goole"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue With Google"
                    android:textSize="@dimen/fs_14sp"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/dim_10dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>



    
    

</ScrollView>