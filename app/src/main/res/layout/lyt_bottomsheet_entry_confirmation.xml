<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dim_25dp"
        android:paddingEnd="@dimen/dim_25dp"
        android:paddingTop="@dimen/dim_15dp"
        android:padding="@dimen/dim_20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/confirmation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmation"
            android:textColor="@color/space_purple"
            android:textSize="@dimen/fs_24sp"
            android:fontFamily="@font/nunito_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/DW_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deposit + Winnings"
            android:textColor="@color/black"
            android:textSize="@dimen/fs_14sp"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintTop_toBottomOf="@id/confirmation_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="@dimen/dim_30dp"/>

        <TextView
            android:id="@+id/DW_av_bal_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Av. Bal."
            android:textColor="@color/grey"
            android:textSize="@dimen/fs_12sp"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintTop_toBottomOf="@id/DW_lbl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/DW_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹32.55"
            android:textColor="@color/black"
            android:textSize="@dimen/fs_12sp"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintTop_toBottomOf="@id/DW_lbl"
            app:layout_constraintStart_toEndOf="@id/DW_av_bal_lbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="@dimen/dim_5dp"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/DW_entry_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹19.00"
            android:textColor="@color/black"
            android:textSize="@dimen/fs_14sp"
            android:fontFamily="@font/nunito_bold"
            app:layout_constraintTop_toTopOf="@id/DW_lbl"
            app:layout_constraintStart_toEndOf="@id/DW_lbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/bonus_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bonus"
            android:textColor="@color/black"
            android:textSize="@dimen/fs_14sp"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintTop_toBottomOf="@id/DW_av_bal_lbl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="@dimen/dim_15dp"/>

        <TextView
            android:id="@+id/bonus_av_bal_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Av. Bal."
            android:textColor="@color/grey"
            android:textSize="@dimen/fs_12sp"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintTop_toBottomOf="@id/bonus_lbl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/bonus_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹10.00"
            android:textColor="@color/black"
            android:textSize="@dimen/fs_12sp"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintTop_toBottomOf="@id/bonus_lbl"
            app:layout_constraintStart_toEndOf="@id/bonus_av_bal_lbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="@dimen/dim_5dp"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/bonus_entry_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹1.00"
            android:textColor="@color/black"
            android:textSize="@dimen/fs_14sp"
            android:fontFamily="@font/nunito_bold"
            app:layout_constraintTop_toTopOf="@id/bonus_lbl"
            app:layout_constraintStart_toEndOf="@id/bonus_lbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/round_grey_line"
            android:layout_marginStart="@dimen/dim_5dp"
            android:layout_marginEnd="@dimen/dim_5dp"
            app:layout_constraintTop_toBottomOf="@id/bonus_av_bal_lbl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="@dimen/dim_20dp"/>

        <TextView
            android:id="@+id/total_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹42.55"
            android:textColor="@color/black"
            android:textSize="@dimen/fs_20sp"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginTop="@dimen/dim_20dp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/total_balance_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Balance"
            android:textColor="@color/grey"
            android:textSize="@dimen/fs_12sp"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintTop_toBottomOf="@id/total_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/entry_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹20.00"
            android:textColor="@color/black"
            android:textSize="@dimen/fs_20sp"
            android:fontFamily="@font/nunito_bold"
            app:layout_constraintTop_toTopOf="@id/total_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/entry_fee_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Pay"
            android:textColor="@color/grey"
            android:textSize="@dimen/fs_12sp"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintTop_toBottomOf="@id/total_balance"
            app:layout_constraintStart_toStartOf="@id/entry_fee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/entry_disclaimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/entry_disclaimer"
            android:textColor="@color/grey"
            android:textSize="@dimen/fs_10sp"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintTop_toBottomOf="@id/total_balance_lbl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dim_25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dim_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_60"
            android:padding="@dimen/dim_15dp"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fs_14sp"
                android:textColor="@color/white"
                android:text="Cancel"
                android:fontFamily="@font/nunito_semibold"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/pay_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/space_purple"
            android:padding="@dimen/dim_15dp"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fs_14sp"
                android:textColor="@color/white"
                android:text="Pay Now"
                android:fontFamily="@font/nunito_semibold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>