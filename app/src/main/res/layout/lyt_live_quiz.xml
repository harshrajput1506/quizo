<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dim_20dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/dim_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/live_pool_icon_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_15dp"
            android:elevation="0dp"
            android:background="@drawable/random"
            app:cardCornerRadius="@dimen/dim_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/live_pool_icon"
                android:layout_width="@dimen/dim_80dp"
                android:layout_height="@dimen/dim_80dp"
                android:src="@drawable/random" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/live_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_10dp"
            android:layout_marginTop="@dimen/dim_5dp"
            android:fontFamily="@font/nunito_bold"
            android:text="General"
            android:textColor="@color/black"
            android:textSize="@dimen/fs_20sp"
            android:maxLines="1"
            android:maxWidth="@dimen/dim_150dp"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/live_pool_icon_card"
            app:layout_constraintTop_toTopOf="@id/live_pool_icon_card"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/live_pool_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="Discovery"
            android:maxWidth="@dimen/dim_150dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/grey"
            android:textSize="@dimen/fs_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/live_topic_title"
            app:layout_constraintTop_toBottomOf="@id/live_topic_title"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/live_prize_pool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_5dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Win ₹3.00"
            android:textColor="@color/peach"
            android:textSize="@dimen/fs_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/live_topic_title"
            app:layout_constraintTop_toBottomOf="@id/live_pool_title"
            app:layout_constraintVertical_bias="0" />

        <LinearLayout
            android:id="@+id/live_prize_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dim_20dp"
            android:layout_marginTop="@dimen/dim_5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0.5" >

            <TextView
                android:id="@+id/live_pool_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="₹5"
                android:textColor="@color/grey"
                android:textSize="@dimen/fs_18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Now"
                android:layout_marginTop="@dimen/dim_10dp"
                android:background="@drawable/round_btn_bg"
                android:fontFamily="@font/nunito_bold"
                android:textSize="@dimen/fs_12sp"
                android:textColor="@color/space_purple"
                android:paddingStart="@dimen/dim_15dp"
                android:paddingEnd="@dimen/dim_15dp"
                android:paddingTop="@dimen/dim_8dp"
                android:paddingBottom="@dimen/dim_8dp"/>
        </LinearLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>