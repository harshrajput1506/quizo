<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/space_purple"
    tools:context=".Activities.TopicActivity">

    <ImageView
        android:id="@+id/topic_back_btn"
        android:layout_width="@dimen/dim_30dp"
        android:layout_height="@dimen/dim_30dp"
        android:src="@drawable/ic_back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="@dimen/dim_20dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:padding="@dimen/dim_6dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/topic_icon_card"
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_100dp"
        app:cardCornerRadius="@dimen/dim_20dp"
        android:layout_marginTop="@dimen/dim_20dp"
        android:layout_marginStart="@dimen/dim_30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topic_back_btn"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0">


        <ImageView
            android:id="@+id/topic_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/random" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bollywood"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_bold"
        android:textSize="@dimen/fs_24sp"
        app:layout_constraintStart_toEndOf="@id/topic_icon_card"
        app:layout_constraintTop_toTopOf="@id/topic_icon_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/dim_15dp"
        android:layout_marginTop="@dimen/dim_5dp"/>

    <TextView
        android:id="@+id/topic_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The largest of the Indian film  industries, Bollywood."
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="@dimen/fs_12sp"
        app:layout_constraintStart_toEndOf="@id/topic_icon_card"
        app:layout_constraintTop_toBottomOf="@id/topic_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/dim_15dp"
        android:layout_marginTop="@dimen/dim_5dp"
        android:layout_marginEnd="@dimen/dim_15dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_topic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="@dimen/dim_3dp"
        app:layout_constraintTop_toBottomOf="@id/topic_icon_card"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dim_30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/topic_prize_pool_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_40dp"
                android:layout_marginTop="@dimen/dim_40dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Prize Pool"
                android:textColor="@color/black"
                android:textSize="@dimen/fs_16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/topic_prize_pool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fs_24sp"
                android:text="Free"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_bold"
                app:layout_constraintStart_toStartOf="@id/topic_prize_pool_lbl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topic_prize_pool_lbl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:id="@+id/topic_players_joined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/2"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="@dimen/fs_18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/topic_prize_pool_lbl"
                app:layout_constraintBottom_toBottomOf="@id/topic_prize_pool"
                app:layout_constraintHorizontal_bias="1"
                android:layout_marginEnd="@dimen/dim_40dp"/>

            <ImageView
                android:layout_width="@dimen/dim_25dp"
                android:layout_height="@dimen/dim_25dp"
                android:src="@drawable/group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1"
                android:layout_marginEnd="@dimen/dim_10dp"
                app:layout_constraintTop_toTopOf="@id/topic_prize_pool_lbl"
                app:layout_constraintBottom_toBottomOf="@id/topic_prize_pool"
                app:layout_constraintEnd_toStartOf="@id/topic_players_joined"/>

            <TextView
                android:id="@+id/topic_entry_fee_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Fee"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="@dimen/fs_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topic_prize_pool"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                android:layout_marginStart="@dimen/dim_40dp"
                android:layout_marginTop="@dimen/dim_30dp"/>

            <TextView
                android:id="@+id/topic_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fs_12sp"
                android:textColor="@color/grey"
                android:text="Bonus  5%"
                android:fontFamily="@font/nunito_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                android:layout_marginEnd="@dimen/dim_40dp"
                app:layout_constraintTop_toTopOf="@id/topic_entry_fee_lbl"
                app:layout_constraintBottom_toBottomOf="@id/topic_entry_fee_lbl"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/topic_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topic_entry_fee_lbl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                android:layout_marginStart="@dimen/dim_15dp"
                android:layout_marginTop="@dimen/dim_20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include layout="@layout/lyt_shimmer_topic_entry"/>
                    <include layout="@layout/lyt_shimmer_topic_entry"/>
                    <include layout="@layout/lyt_shimmer_topic_entry"/>
                    <include layout="@layout/lyt_shimmer_topic_entry"/>
                    <include layout="@layout/lyt_shimmer_topic_entry"/>
                    <include layout="@layout/lyt_shimmer_topic_entry"/>

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topic_entry_fee_RV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topic_entry_fee_lbl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                android:layout_marginStart="@dimen/dim_15dp"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/dim_20dp"/>

            <com.google.android.material.tabs.TabLayout
                android:visibility="invisible"
                android:id="@+id/topic_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topic_entry_fee_RV"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="@dimen/dim_20dp"
                android:background="@color/white"
                app:tabIndicatorFullWidth="false"
                app:tabMode="fixed"
                app:tabIndicatorColor="@color/orange"
                app:tabGravity="center"
                app:tabTextAppearance="@style/TopicTabText"
                app:tabIndicatorGravity="bottom"
                app:tabSelectedTextColor="@color/orange"
                app:tabTextColor="@color/grey"
                app:tabIndicatorAnimationMode="elastic"/>

            <androidx.viewpager.widget.ViewPager
                android:visibility="invisible"
                android:id="@+id/topic_viewpager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topic_tab"
                android:layout_marginTop="@dimen/dim_10dp"
                app:layout_constraintBottom_toTopOf="@id/topic_entry_btn"/>

            <LinearLayout
                android:id="@+id/topic_entry_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/topic_viewpager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1"
                android:background="@color/space_purple"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/topic_entry_btn_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Play Now  ₹3"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="@dimen/fs_14sp"
                    android:padding="@dimen/dim_15dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>